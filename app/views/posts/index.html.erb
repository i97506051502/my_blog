<div class="col-md-8">
<% @posts.each do |post| %>
<h2><%= post.title %></h2>
<p><%= post.created_at %></p>
<p><%= truncate(post.body, :length => 50) %></p>
<%= link_to '続きを読む', "/posts/#{post.id}", :class => "btn btn-default" %>
<% end %>
</div>
<div class="col-md-4">
  <div class="thumbnail">
    <img src="<%= @authors[0].image_url %>">
  </div>
  <div class="caption">
    <h3><%= @authors[0].name %></h3>
    <p><%= @authors[0].description %></p>
  </div>
  <div class="list-group">
    <% @new_posts.each_with_index do |post| %>
      <div class="list-group-item">
      <%= link_to post.title, post_path(post.id) %>
      </div>
    <% end %>
  </div>
</div>
