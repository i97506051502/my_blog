<div class="col-lg-12">

<h1>ブログ記事投稿</h1>

<%= form_for @post do |f| %>
<div class="form-group">
<%= f.label :title, 'タイトル' %>
<%= f.text_field :title, :class => "form-control" %>
</div>

<div class="form-group">
<%= f.label :category, 'カテゴリー' %>
<%#= f.text_field :category, :class => "form-control" %>
<%= f.collection_select(:category_id, Category.all, :id, :title, class: "form-control") %>
</div>

