<div class="col-lg-12">

<h1>ブログ記事編集</h1>

<%= form_for @post do |f| %>
<div class="form-group">
<%= f.label :title, 'タイトル' %>
<%= f.text_field :title, :class => "form-control" %>
</div>
<div class="form-group">
<%= f.label :category, 'カテゴリー' %>
<%= f.text_field :category, :class => "form-control" %>
</div>
<div class="form-group">
<%= f.label :body, '本文' %>
<%= f.text_area :body, :class => "form-control" %>
</div>
<div class="form-group">
<%= f.submit '更新する', :class => "btn btn-primary" %>
</div>
<% end %>

</div>
